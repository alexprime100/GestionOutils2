@model IEnumerable<Projet.Models.Utilisateur>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Admin";
    var db = DataContext.GetInstance();
    List<Utilisateur> users = db.Utilisateurs.ToList();
}

<div class="container">
    <h1>Liste des utilisateurs</h1>
    <br />
    <br />

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Adresse</th>
                <th>Date de naissance</th>
                <th>Téléphone</th>
                <th>Courriel</th>
                <th>Role</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in users)
            {
                <tr>
                    <th>@user.Id</th>
                    <th>@user.Nom</th>
                    <th>@user.Prenom</th>
                    <th>@user.Adresse</th>
                    <th>@user.DateNaissance</th>
                    <th>@user.Telephone</th>
                    <th>@user.Courriel</th>
                    <th>@user.Role</th>
                    <th>
                        <div class="btn-group">
                            <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-info">Modifier</a>
                            <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-sm btn-danger ml-1">Supprimer</a>
                        </div>
                    </th>
                </tr>
            }
        </tbody>
    </table>
    <br /><br />

    <br />
    <p> <center><a asp-action="Index" asp-controller="Home" class="btn btn-secondary btn-lg">Retour menu principal</a> </center></p>

</div>
