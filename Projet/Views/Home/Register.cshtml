@using Projet.Extensions;
@{
    var error = TempData["Error"] as string;
}
<h1>Register</h1>
@if (!error.IsNullOrEmpty())
{
    <h2 class="alert-danger" style="padding:20px">@error</h2>
}
<form action="" method="post">
    <ul>
        <li> <input type="text" name="firstName" placeholder="First Name" /> </li>
        <li> <input type="text" name="name" placeholder="Last Name" /> </li>
        <li> <input type="email" name="email" placeholder="Email adress" /> </li>
        <li> <input type="password" name="password" placeholder="Password" /> </li>
        <li> <input type="password" name="password2" placeholder="Confirm Password" /> </li>
        <li> <input type="text" name="adress" placeholder="Adress" /> </li>
        <li> <input type="tel" name="phone" placeholder="Telephone number" /> </li>
        <li> <input type="datetime-local" name="dob" placeholder="Date of birth" /> </li>
        <li> <input type="submit" value="register" /> </li>
    </ul>
</form>